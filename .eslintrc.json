{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-undef": "off",
    "no-console": "off",
    "eqeqeq": [
      "error",
      "always"
    ],
    "curly": "error",
    "camelcase": "error",
    "no-new-wrappers": "error",
    "eol-last": [
      "error",
      "always"
    ]
  }
}
